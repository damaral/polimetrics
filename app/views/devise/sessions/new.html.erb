<!-- Sign In Option 1 -->
<div id="sign_in1">
    <div class="container">
        <div class="row"  style="margin-top:120px">
            <div class="col-md-12 header">
                <h4>Entrar na sua conta</h4>
                <p>
                    There are many variations of passages of Lorem alteration in some form  injected humour these randomised words .</p>
            </div>

            <div class="col-md-12 footer">
               <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => "form-inline"}) do |f| %>
      

                  <%= f.input_field :email, :required => false, :autofocus => true, :label => false, :as => :string, :wrapper => false, :input_html => {:class => "form-control"}, :placeholder => "Email" %>
                  <%= f.input_field :password, :required => false, :label => false, :input_html => {:class => "form-control"}, :wrapper => false, :placeholder => "Password" %>

                  <%= f.button :submit, "Entrar", :class => "btn-primary" %>
                   
      
              <div class="col-md-6 remember">                    
                    <%= f.input :remember_me, :as => :boolean, :label => "Lembrar senha" if devise_mapping.rememberable? %>
                </div>

                <div class="col-md-6">
                    <div class="dosnt">
                        <span>NÃ£o possui conta?</span>

                        <%= link_to "Cadastrar", new_funcionario_registration_path %>

                    </div>
                </div>


              <% end %>
              <%= render "devise/shared/links" %>

            </div>

        </div>
    </div>
</div>