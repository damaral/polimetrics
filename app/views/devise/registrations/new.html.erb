<!-- Sign In Option 1 -->
<div id="sign_up1" style="margin-bottom:0px">
    <div class="container">
        <div class="row" style="margin-top:70px">
            <div class="col-md-12 header">
                <h4>Crie sua conta</h4>

            </div>

            <div id="sign_up2">
                <div class="container">
                    <div class="row login">
                        <div class="col-sm-10 signin_box" style="float:none">
                            <div class="box" style="position: relative; left: 45px;">
                                <div class="box_cont">

                                    <div class="form">


	                                    <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
										  <%= f.error_notification %>

										  <div class="form-inputs">
										  	<%= f.input :nome, :as => :string, :label => false, :placeholder => "Nome", :input_html => {:class => "form-control"} %>
	    									<%= f.input :sobrenome, :as => :string, :label => false, :placeholder => "Sobrenome", :input_html => {:class => "form-control"} %>
										    <%= f.input :email, :required => true, :autofocus => true, :as => :string, :label => false, :placeholder => "Email", :input_html => {:class => "form-control"} %>
										    <%= f.input :password, :required => true, :as => :password, :label => false, :placeholder => "Senha", :input_html => {:class => "form-control"} %>
										    <%= f.input :password_confirmation, :required => true, :as => :password, :label => false, :placeholder => "Confirmar senha", :input_html => {:class => "form-control"} %>
										  </div>

										   <div class="forgot">
		                                        <span>Já é cadastrado?</span>
		                                        <%= link_to "Login", new_funcionario_session_path %>
		                                   </div>

										  <div class="form-actions">
										    <%= f.button :submit, "CADASTRAR" %>
										  </div>
										<% end %>

                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div> 
        </div> 
    </div>
</div>
